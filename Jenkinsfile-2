pipeline {
    agent any

    stages {
        stage ('Deploy') {
            steps {
                script {
                    withCredentials([sshUserPrivateKey(credentialsId: "key", keyFileVariable: 'keyfile')]) {
                       sh '''
                            scp -i ${keyfile} index.html ec2-user@ec2-18-217-189-22.us-east-2.compute.amazonaws.com://usr/share/nginx/html/index.html
                       '''
                    }
                }
            }
        }
    }
}